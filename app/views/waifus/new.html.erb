<%= form_for Waifu.new do |w| %>
    <%= w.label :name, 'NOME:' %>
    <%= w.text_field :name %>
    <%= w.label :age, 'IDADE:' %>
    <%= w.number_field :age %>
    <%= w.label :anime, 'ANIME:' %>
    <%= w.text_field :anime %>
    <%= w.label :description, 'DESCRIÇÃO:' %>
    <%= w.text_field :description %>
    <%= w.label :main, 'WAIFU PRINCIPAL:' %>
    <%= w.check_box :main %>
    <%= w.submit 'Criar' %>
<% end %>